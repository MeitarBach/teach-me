<!DOCTYPE html>
<html>
    <head>
        <title>TeachMe | My Purchases</title>
        <% include partials/head %>
    <link href="../stylesheets/accordion.css" rel="stylesheet" type="text/css" media="all" />


    </head>
	
    <body>
        <!-- header -->
            <% include partials/logged-header %>
        <!-- //header -->
        <div class="register">
            <div class="container">
                <h3 class="animated wow zoomIn" data-wow-delay=".5s">My Orders</h3>
            </div>
        </div>
        <div class="accordion">
            <% for (let i = 0; i < userPurchases.length; i++) { %>
            <div class="accordion-item">
                    <div class="accordion-item-header">
                        Order No. <%= userPurchases[i].orderID %> - <%=  userPurchases[i].checkoutDate  %>
                    </div>
                <div class="accordion-item-body">
                    <div class="accordion-item-body-content">
                        <u><h3>Classes</h3></u><br>
                        <% for (let j = 0; j < userPurchases[i].items.length; j++) { %>
                            <div class="purchase-row">
                                <div class="purchase-column">
                                    <p>Title:</p>
                                    <p>Instructor's Name:</p>
                                    <p>Price:</p>
    
                                </div>
                                <div class="purchase-column">
                                  <p><%= userPurchases[i].items[j].title %></p>
                                  <p><%= userPurchases[i].items[j].instructor.name %></p>
                                  <p><%= userPurchases[i].items[j].price %> $</p>
                                </div>
                            </div>
                              <br>
                        <% } %>
                        <hr style="width:50%;text-align:left;margin-left:0">
                        <strong>Total price : $<%= userPurchases[i].totalPrice %></strong>
                    </div>
                </div>
            </div>
            <% } %>
        </div> 
        <!-- scripts -->
        <script type="text/javascript" src="../javascripts/accordion.js" defer></script>
        <!-- /scripts -->

    </body>